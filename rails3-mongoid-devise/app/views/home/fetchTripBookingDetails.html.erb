<!DOCTYPE html>
<html lang="en">

<style>
.center-table
{
  margin: 0 auto !important;
  float: none !important;
}

.limit-table-col-30
{
  width:30%;
}
.full-width-tabs > ul.nav.nav-tabs {
    display: table;
    width: 100%;
    table-layout: fixed;
}
.full-width-tabs > ul.nav.nav-tabs > li {
    float: none;
    display: table-cell;
}
.full-width-tabs > ul.nav.nav-tabs > li > a {
    text-align: center;
}
</style>

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Savo</title>

    <!-- Bootstrap Core CSS -->
    <link href="../bower_components/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- MetisMenu CSS -->
    <link href="../bower_components/metisMenu/dist/metisMenu.min.css" rel="stylesheet">

    <!-- DataTables CSS -->
    <link href="../bower_components/datatables-plugins/integration/bootstrap/3/dataTables.bootstrap.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="../dist/css/sb-admin-2.css" rel="stylesheet">

    <!-- Custom Fonts -->
    <link href="../bower_components/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link href='http://fonts.googleapis.com/css?family=Lato:400,700' rel='stylesheet' type='text/css'>


    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>

<body>                                             

    <div id="wrapper" style="font-family: "Lato", sans-serif;">

        <!-- Page Content -->
        <div id="page-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">Budget To Beat &nbsp&nbsp<i class="fa fa-caret-right"></i> &nbsp&nbsp<i class="fa fa-inr"></i> <%= @budgetToBeat %></h1>
                    </div>
                    <!-- /.col-lg-12 -->
                </div>
                <br>
                <div class="panel panel-default">
                        
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <div class="tabbable full-width-tabs">
                                <!-- Nav tabs -->
                                <ul class="nav nav-tabs">
                                    <li class="active"><a href="#home1" data-toggle="tab">Flights To</a>
                                    </li>
                                    <li><a href="#home2" data-toggle="tab">Flights From</a>
                                    </li>
                                    <li><a href="#profile" data-toggle="tab">Accomodation</a>
                                    </li>
                                    <li><a href="#messages" data-toggle="tab">Car</a>
                                    </li>
                                </ul>
                                <!-- Tab panes -->
                                <div class="tab-content">
                                    <div class="tab-pane fade in active" id="home1">
                                        <br>
                                        <table cellspacing="0" cellpadding="0" class="table   table-hover text-center" id="dataTables-example">
                                            <thead>
                                                <tr class="text-center">
                                                    <th class="text-center">Carrier</th>
                                                    <th class="text-center">Departure</th>
                                                    <th class="text-center">Arrival</th>
                                                    <th class="text-center">Duration</th>
                                                    <th class="text-center">Price</th>
                                                </tr>
                                            </thead>
                                            <tbody>

                          

                                           <%= form_tag("/storeTripDetails", method: :post) do %>

                                                <% i=0 %>
                                                <% @result_going["tripOptions"].each do |result| %>
                                                    <tr>
                                                        <td><%= result["carrier"] %></td>
                                                        <td><%= result["depTime"]%> - <%= @origin %></td>
                                                        <td><%= result["arrTime"] %> - <%= @destination %></td>
                                                        <td><%= result["duration"] %> H - Stops <%= result["numberOfStops"] %></td>
                                                        <td><%= result["cost"]%> &nbsp&nbsp&nbsp<span class="label label-primary">
                                                        <%= radio_button_tag(:flightGoing, i) %> </span> </td>
                                                    </tr>
                                                    <% i = i + 1 %>
                                                <% end %>

                                            </tbody>
                                        </table>
                                    </div>
                                    <div class="tab-pane fade" id="home2">
                                        <br>
                                        <table class="table table-hover text-center" id="dataTables-example2">
                                            <thead>
                                                <tr class="text-center">
                                                    <th class="text-center">Carrier</th>
                                                    <th class="text-center">Departure</th>
                                                    <th class="text-center">Arrival</th>
                                                    <th class="text-center">Duration</th>
                                                    <th class="text-center">Price</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% i=0 %>
                                                <% @result_coming["tripOptions"].each do |result| %>
                                                    <tr>
                                                        <td><%= result["carrier"] %></td>
                                                        <td><%= result["depTime"]%> - <%= @destination %></td>
                                                        <td><%= result["arrTime"] %> - <%= @origin %></td>
                                                        <td><%= result["duration"] %> H - Stops <%= result["numberOfStops"] %></td>
                                                        <td><%= result["cost"]%> &nbsp&nbsp&nbsp <span class="label label-primary">
                                                        <%= radio_button_tag(:flightComing, i) %>
                                                        </span></td>
                                                    </tr>
                                                    <% i = i + 1 %>
                                                <% end %>
                                            </tbody>
                                        </table>
                                    </div>
                                    <div class="tab-pane fade" id="profile">
                                        <br>
                                        <table class="table table-hover text-center" id="dataTables-example3">
                                            <thead>
                                                <tr class="text-center">
                                                    <th class="text-center">Hotel</th>
                                                    <th class="text-center">Price</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr>
                                                    <td><font size="3px">Excelsior</font><br>Earn 32 points</td>
                                                    <td><font size="3px">4 x <i class="fa fa-inr"></i>5000 = <i class="fa fa-inr"></i>20000</font><button type="button" class="btn btn-outline btn-primary" style="float: right;">Book</button></td>
                                                </tr>
                                                <tr>
                                                    <td><font size="3px">Hotel Taj Mahal</font><br>Earn 20 points</td>
                                                    <td><font size="3px">4 x <i class="fa fa-inr"></i>4500 = <i class="fa fa-inr"></i>18000</font><button type="button" class="btn btn-outline btn-primary" style="float: right;">Book</button></td>
                                                </tr>
                                                <tr>
                                                    <td><font size="3px">Navotal</font><br>Earn 40 points</td>
                                                    <td><font size="3px">4 x <i class="fa fa-inr"></i>5000 = <i class="fa fa-inr"></i>20000</font><button type="button" class="btn btn-outline btn-primary" style="float: right;">Book</button></td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                    <div class="tab-pane fade" id="messages">
                                        <br>
                                        <table class="table table-hover text-center" id="dataTables-example4">
                                            <thead>
                                                <tr class="text-center">
                                                    <th class="text-center">Type</th>
                                                    <th class="text-center">Price</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr>
                                                    <td><font size="3px">Uber Prime</font></td>
                                                    <td><font size="3px">4 x <i class="fa fa-inr"></i>200 = <i class="fa fa-inr"></i>800</font><button type="button" class="btn btn-outline btn-primary" style="float: right;">Book</button></td>
                                                </tr>
                                                <tr>
                                                    <td><font size="3px">Ola Share</font></td>
                                                    <td><font size="3px">4 x <i class="fa fa-inr"></i>160 = <i class="fa fa-inr"></i>640</font><button type="button" class="btn btn-outline btn-primary" style="float: right;">Book</button></td>
                                                </tr>
                                                <tr>
                                                    <td><font size="3px">Ola Mini</font></td>
                                                    <td><font size="3px">4 x <i class="fa fa-inr"></i>160 = <i class="fa fa-inr"></i>640</font><button type="button" class="btn btn-outline btn-primary" style="float: right;">Book</button></td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>

                                     <%= submit_tag 'Confirm Trip Details', :class => 'btn btn-primary btn-lg', :style => 'width: 280px; margin-right: 10px; float: right;' %>  

                                    <%end%>
                                </div>
                            </div>
                        </div>
                        <!-- /.panel-body -->
                    </div>
                
                <!-- /.row -->
            </div>
            <!-- /.container-fluid -->
        </div>
        <!-- /#page-wrapper -->

    </div>
    <!-- /#wrapper -->

    <script src="../bower_components/jquery/dist/jquery.min.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="../bower_components/bootstrap/dist/js/bootstrap.min.js"></script>

    <!-- Metis Menu Plugin JavaScript -->
    <script src="../bower_components/metisMenu/dist/metisMenu.min.js"></script>

    <!-- DataTables JavaScript -->
    <script src="../bower_components/datatables/media/js/jquery.dataTables.min.js"></script>
    <script src="../bower_components/datatables-plugins/integration/bootstrap/3/dataTables.bootstrap.min.js"></script>

    <!-- Custom Theme JavaScript -->
    <script src="../dist/js/sb-admin-2.js"></script>
</body>

</html>
