            </div>       
            <!-- /.navbar-header -->

            <ul class="nav navbar-nav navbar-right" style="margin-right: 10px">
            <li><a href="#" style="pointer-events: none;"><font color="white">Anna</font></a></li>
            <li><a href="./logIn.html"><span class="glyphicon glyphicon-log-in" style="color:white"></span> <font color="white">Log out</font></a></li>
            </ul>
            <!-- /.navbar-top-links -->

            <div class="navbar-default sidebar" role="navigation" style="background-color: white">
                <div class="sidebar-nav navbar-collapse">
                    <div style="vertical-align: top;">
                    <div class="panel panel-default">
                        <ul class="nav"  id="side-menu">
                            <li>
                                <br>
                                <br>
                                <div class="text-center"><font size="7" color="#A43B40">5000</font></div>
                                <div class="text-center"><font size="4" color="#A43B40">points</font></div>
                                <br>
                                <br>
                            <!-- <a href="index.html"><i class="fa fa-dashboard fa-fw"></i> Dashboard</a> -->
                            </li>
                            <li>
                                <a href="./myTrips.html"><div class="text-center">My Trips</div></a>
                            </li>
                            <li>
                                <a href="./rewards.html"><div class="text-center">Rewards</div></a>
                            </li>
                            <li>
                                <a href="./settings.html"><div class="text-center">Settings</div></a>
                            </li>
                            <li>
                                <a href="./help.html"><div class="text-center">Help</div></a>
                            </li>
                        </ul>
                        </div>
                        <div class="text-center" style='border-radius: 0;' >
                            <div class="panel panel-default" style='border-radius: 0;'>
                                <div class="panel-heading" style='border-radius: 0;'><span class="glyphicon glyphicon-flag" ></span>    Leaderboard</div>
                                <ul class="nav">
                                <li><a><div class="text-center"><span class="glyphicon glyphicon-star" style="color:black"></span>      <font color="black">Anna Karenina</font><br><font color="#A43B40">5000</font></div></a></li>
                                <li><a><div class="text-center"><span class="glyphicon glyphicon-star-empty" style="color:black"></span>    <font color="black">Dave Ebert</font><br><font color="#A43B40">4200</font></div></a></li>
                                <li><a><div class="text-center"><span class="glyphicon glyphicon-star-empty" style="color:black"></span>    <font color="black">Chris Hayes</font><br><font color="#A43B40">3900</font></div></a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </nav>

        <!-- Page Content -->
        <div id="page-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">My Trips
                        <a href="./newtrip2.html" role="button" class="btn btn-success btn-lg" style="float: right;"><i class="fa fa-plus-square"></i> New Trip</a></h1>
                    </div>
                    <!-- /.col-lg-12 -->
                </div>
                <br>
                <div class="row">
                    <% @trips.each do |trip| %>
                        <hr style="border-top: dashed 1px;color:#333;">
                        <div class="panel panel-primary" style="border-color:#A43B40">

                            <% if trip.leave_date <= @todayDate %>
                                <div class="panel-heading" style="background-color: #A43B40;border-color:#A43B40">
                                    <font size="4"><%= trip.name %></font>
                                </div>
                            <% else %>
                                <div class="panel-heading" style="background-color: #A43B40;border-color:#A43B40">
                                    <font size="4"><%= trip.name %> <span style="float:right"class="label label-primary">Upcoming</span> </font>
                                </div>
                            <% end %>
                                <div class="panel-body">
                                    <!-- <h3>Budget to beat: <span style="float: right;">1,05,000</span></h3> -->
                                    <p><font size="3">Budget to beat: &nbsp <i class="fa fa-inr"></i> <%= trip.budget_to_beat %></font></p>
                                    <!-- <h3>Budget to beat: 1,05,000</h3> -->
                                    <table class="table table-bordered">
                                        <tbody>
                                          <tr>
                                            <td align="center"><font size="3"><%= trip.city_from %>&nbsp<i class="fa fa-exchange fa-1g"></i>&nbsp <%= trip.city_to %><br><%= trip.leave_date %> - <%= trip.return_date %></font></td>
                                            <td align="center"><font size="3"><%= trip.hotel_name %>, <%= distance_of_time_in_words(trip.check_in, trip.check_out)%><br><i class="fa fa-inr"></i> <%= trip.hotel_cost%></font></td>
                                            <td align="center"><font size="3"> <%= distance_of_time_in_words(trip.pick_up, trip.drop)%><br/><i class="fa fa-inr"></i> <%= trip.car_cost %></font>
                                          </tr>
                                        </tbody>
                                      </table>
                                </div>
                        </div>
                    <% end %>
                    <!-- /.col-lg-12 -->
                </div>
                
                <!-- /.row -->
            </div>
            <!-- /.container-fluid -->
        </div>
        <!-- /#page-wrapper -->

    </div>
