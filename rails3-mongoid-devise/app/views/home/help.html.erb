<body style="overflow-x: hidden; background-color: white; font-family: "Lato", sans-serif;">


    <div id="wrapper">

        <!-- Page Content -->
        <div id="page-wrapper" style='border-radius: 0; font-family: "Lato", sans-serif;'>
            <div class="container-fluid">
                <div class="row">
                    <div>
                        <h1 class="page-header">Get in Touch!<a href="/newTrip" role="button" class="btn btn-success btn-lg btn-outline" style="float: right; font-size: 15px;"><i class="fa fa-plus-square"></i> New Trip</a></h1>
                    </div>
                    <!-- /.col-lg-12 -->
                </div>
                <div class="col-lg-6 col-lg-offset-2">
                    <div class="panel-body">
                        <%= form_tag("/contactUs", method: :post) do %>
                                <fieldset>
                                    <div class="form-group">
                                    <%= text_field_tag 'contactNumber', nil, :class => "form-control", :placeholder => "Contact Number" %>
                                    </div>
                                    <div class="form-group">
                                    <%= text_area_tag 'Query', nil, :rows => 10, :class => "form-control", :placeholder => "Give a brief description of the problem you're facing..." %>
                                    </div>
                                    
                                </fieldset>
                        <% end %>
                    </div>

                    <div class="text-right" style="margin-right: 15px">
                    <!--add mailto@savo.com-->
                    <a href="./budgetToBeat.html"><button style="font-size:15px" type="button" class="btn btn-primary btn-lg btn-outline">Submit</button></a>
                    </div>

                    </div>
                <!-- /.row -->
            </div>
            <!-- /.container-fluid -->
        </div>
        <!-- /#page-wrapper -->

    </div>
    <!-- /#wrapper -->

